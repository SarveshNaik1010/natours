block content 
  <div class="div-carousel div-carousel-overlay hidden-carousel">
    <div class="carousel-overlay-blur"></div>
    <div class="carousel-overlay">
      <div class="scroll-left">
        <ion-icon class="scroll-arrow scroll-left cursor-pointer" name="chevron-back-outline"></ion-icon>
      </div>
      <div class="overlay-content">
          <img class="imgC" src="http://127.0.0.1:8000/data/projectImages/project-1689919423035.jpeg" alt="">
