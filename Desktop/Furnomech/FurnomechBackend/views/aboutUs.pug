    .overlay-bg-blur
    .overlay-card
        .div-overlay-member-img
            img.overlay-member-img(src='https://assets.website-files.com/62dae85d36cc11580a6942ab/62eafa7ff885ef4e0f4bd8bb_team-member-profile-02-p-500.jpg', alt='')
